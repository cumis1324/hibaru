<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#80000000"
    android:id="@+id/custom_controlss"
    >


    <LinearLayout
        android:id="@+id/judulUtama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/setting"
        android:layout_marginStart="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/playerTitle"
            style="@style/sizelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jost_medium"
            android:paddingHorizontal="20dp"
            android:textColor="#CCCCCC"
            android:maxLines="2"
            android:textSize="20sp"
            android:textAlignment="viewStart"
            android:text="Kung Fu panda 4 (2024)"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/playerEpsTitle"
            style="@style/sizelabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:fontFamily="@font/jost_medium"
            android:paddingHorizontal="20dp"
            android:textColor="#CCCCCC"
            android:textSize="15sp"
            android:maxLines="2"
            android:textAlignment="viewStart"
            android:text="Season 1 Episode "
            android:visibility="gone"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/setting"
        android:orientation="horizontal">
        <ImageButton
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/btn_src"
            android:nextFocusRight="@id/btn_cc"
            android:nextFocusDown="@id/btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_video_settings"
            android:background="@drawable/button_selector"
            android:padding="15dp"/>
        <ImageButton
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/btn_cc"
            android:nextFocusLeft="@id/btn_src"
            android:nextFocusRight="@id/btn_setting"
            android:nextFocusDown="@id/btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cc"
            android:background="@drawable/button_selector"
            android:padding="15dp"/>
        <ImageButton
            android:focusable="true"
            android:clickable="true"
            android:nextFocusLeft="@id/btn_cc"
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings"
            android:background="@drawable/button_selector"
            android:padding="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        >
        <ImageButton
            android:focusable="true"
            android:clickable="true"
            android:nextFocusDown="@id/btn_fullscreen"
            android:nextFocusUp="@id/btn_cc"
            android:nextFocusRight="@drawable/play_shape"
            android:id="@+id/btn_bw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:src="@drawable/ic_bw_10"
            android:padding="15dp"/>
        <ImageButton
            android:focusable="true"
            android:clickable="true"
            android:nextFocusDown="@id/btn_fullscreen"
            android:nextFocusUp="@id/btn_cc"
            android:nextFocusLeft="@id/btn_bw"
            android:nextFocusRight="@id/btn_ff"
            android:id="@+id/btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:src="@drawable/ic_play"
            android:padding="15dp"/>
        <ImageButton
            android:focusable="true"
            android:clickable="true"
            android:nextFocusDown="@id/btn_fullscreen"
            android:nextFocusUp="@id/btn_cc"
            android:nextFocusLeft="@id/btn_play_pause"
            android:id="@+id/btn_ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:src="@drawable/ic_ff_10"
            android:padding="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/player_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:textColor="@android:color/white"
                android:text="0:00 / 0:00" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_alignParentEnd="true"
                    android:id="@+id/btn_fullscreen"
                    android:layout_margin="16dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:nextFocusUp="@id/btn_play_pause"
                    android:nextFocusLeft="@id/btn_play_pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_selector"
                    android:src="@drawable/ic_fullscreen" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <SeekBar
                android:focusable="true"
                android:clickable="true"
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
