<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_top_bottom_bg"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Profile Section (Top Left) -->
    <LinearLayout
        android:id="@+id/profileSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/mrbean"
                tools:src="@drawable/mrbean" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_bold"
                android:text="@string/username"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jost_regular"
                android:text="@string/first_name"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Settings List (Right Side / Center) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="32dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileSection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="48dp">

            <!-- Subtitle Style -->
            <Button
                android:id="@+id/addIndexButton"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_selector"
                android:drawableStart="@drawable/ic_cc"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:focusable="true"
                android:fontFamily="@font/jost_medium"
                android:gravity="start|center_vertical"
                android:nextFocusUp="@id/profileImageView"
                android:padding="16dp"
                android:text="@string/subtitle_style"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- Use External Player -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/externalPlayerToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_selector"
                android:focusable="true"
                android:fontFamily="@font/jost_medium"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="Use External Player"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:thumb="@drawable/switch_ios_selector"
                app:track="@drawable/switch_ios_track"
                app:trackTint="@color/switch_bg_color" />

            <!-- Backup (Import/Export) -->
            <Button
                android:id="@+id/importExportDatabase"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_selector"
                android:drawableStart="@drawable/ic_import_export"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:focusable="true"
                android:fontFamily="@font/jost_medium"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:text="@string/backup"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- Check for Updates -->
            <Button
                android:id="@+id/checkforUpdates"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_selector"
                android:drawableStart="@drawable/ic_update"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:focusable="true"
                android:fontFamily="@font/jost_medium"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:text="Check for Update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- Join Telegram -->
            <Button
                android:id="@+id/telegroup"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_selector"
                android:drawableStart="@drawable/telegram"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:focusable="true"
                android:fontFamily="@font/jost_medium"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:text="Join Telegram"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- Trakteer -->
            <Button
                android:id="@+id/trakteer"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_selector"
                android:drawableStart="@drawable/ic_coffee"
                android:drawablePadding="16dp"
                android:drawableTint="@color/white"
                android:focusable="true"
                android:fontFamily="@font/jost_medium"
                android:gravity="start|center_vertical"
                android:padding="16dp"
                android:text="Trakteer"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
