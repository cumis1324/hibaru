<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:background="@color/black"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/tvShowBackdrop"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/dummyposter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@drawable/gradient_top_bottom_bg" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/frameLogoSeason">
        <ImageView
            android:layout_alignParentBottom="true"
            android:id="@+id/tvLogo"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dummyposter"
            android:visibility="visible" />
        <ImageButton
            android:id="@+id/playInTVShowDetails"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@drawable/play_shape"
            android:backgroundTint="@color/download_button_bg_color"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/jost_regular"
            android:orientation="horizontal"
            android:src="@drawable/ic_play"
            app:cornerRadius="100dp"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/imageButtonContainer"
        android:layout_below="@id/frameLogoSeason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue_900"

        >

        <ImageButton
            android:tooltipText="Favorit"
            android:id="@+id/addToListButtonTV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:layout_toLeftOf="@id/downloadButton"
            android:backgroundTint="@color/transparent"
            android:focusable="true"
            android:nextFocusRight="@id/downloadButton"
            android:nextFocusDown="@id/downloadButton"
            android:scaleType="centerInside"
            android:background="@drawable/play_shape"
            android:src="@drawable/ic_add"
            />



        <ImageButton
            android:id="@+id/downloadButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/fakebutton2"
            android:background="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/download_button_bg_color"
            android:nextFocusLeft="@id/addToListButton"
            android:nextFocusRight="@id/changeSourceButton"
            android:nextFocusUp="@id/addToListButton"
            android:nextFocusDown="@id/changeSourceButton"
            android:scaleType="centerInside"
            android:src="@drawable/ic_download"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/fakebutton2"
            style="@style/sizelabel"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/jost_medium"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="Kung Panda THE LEGEND OF AANG"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            />

        <ImageButton
            android:id="@+id/changeSourceButton"
            android:layout_width="50dp"
            android:visibility="gone"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/fakebutton2"
            android:background="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusLeft="@id/downloadButton"
            android:nextFocusUp="@id/downloadButton"
            android:nextFocusRight="@id/shareButton"
            android:nextFocusDown="@id/shareButton"
            android:scaleType="centerInside"
            android:backgroundTint="@color/download_button_bg_color"
            android:src="@drawable/ic_settings"
            />



        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/changeSourceButton"
            android:background="@color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusLeft="@id/changeSourceButton"
            android:nextFocusUp="@id/changeSourceButton"
            android:scaleType="centerInside"
            android:backgroundTint="@color/download_button_bg_color"
            android:src="@drawable/ic_share_24"
            />


        <!--                    android:background="@drawable/tab_bg_color"-->


    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageButtonContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RelativeLayout
                android:id="@+id/relativeContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/juduloRI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                 >
                <TextView
                    android:id="@+id/titleOri4"
                    style="@style/sizelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/jost_medium"
                    android:paddingHorizontal="20dp"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:text="720p"
                    android:visibility="gone"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/labelsTvShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:layout_below="@id/juduloRI"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/ratingsTVText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:textAlignment="viewStart"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:fontFamily="@font/jost_regular"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="8.6" />

                    <ImageView
                        android:id="@+id/dot"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toEndOf="@id/ratingsTVText"
                        android:src="@drawable/oval" />

                    <TextView
                        android:id="@+id/noOfSeasons"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/dot"
                        android:fontFamily="@font/jost_regular"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:text="2099" />


                    <ImageView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="5dp"
                        android:layout_toEndOf="@id/noOfSeasons"
                        android:src="@drawable/oval" />

                    <TextView
                        android:id="@+id/noOfEpisodes"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/dot2"
                        android:fontFamily="@font/jost_regular"
                        android:text="1h 30m"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/genresRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelsTvShow"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/tvShowGenresText"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/jost_regular"
                        android:gravity="start"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:text="Action, Adventure, Fantasy"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:visibility="visible" />

                </RelativeLayout>


                <LinearLayout

                    android:id="@+id/continueWatching"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/genresRow"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/continueWatchingText"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/jost_medium"
                        android:gravity="start"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:text="S01 E01 "
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/dot3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:src="@drawable/oval"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/episodeNameInTv"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/jost_medium"
                        android:gravity="start"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:text="Episode Title"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/genresRow"
                    android:id="@+id/donasiOverlay"
                    >

                    <WebView
                        android:id="@+id/webview2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/donasiOverlay"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#BE1E2D"
                        >
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_toLeftOf="@id/saweria"
                            android:src="@drawable/cendol"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_toRightOf="@id/saweria"
                            android:src="@drawable/cendol"/>
                        <Button
                            android:id="@+id/saweria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/jost_medium"
                            android:text="Trakteer cendol disini"
                            android:background="@color/transparent"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:textSize="18sp"
                            android:visibility="visible"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/overviewtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_medium"
                        android:text="@string/overview"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="gone">

                    </TextView>
                    <TextView
                            android:id="@+id/tvShowTitle"
                            style="@style/sizelabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:autoSizeMaxTextSize="28sp"
                            android:autoSizeMinTextSize="16sp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="@font/jost_medium"
                            android:maxHeight="80dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:text="Movie Title"

                            />
                    <TextView
                        android:id="@+id/overviewDescTVShow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/jost_regular"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="visible"
                        tools:text="In the 22nd century, a paraplegic Marine is dispatched to the moon Pandora on a unique mission, but becomes torn between following orders and protecting an alien civilization." />
                    <com.google.android.ads.nativetemplates.TemplateView
                        android:id="@+id/my_template"
                        app:gnt_template_type="@layout/gnt_medium_template_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/SeasonRecyclerTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/jost_medium"
                        android:text="Seasons"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSeasons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="110dp" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


