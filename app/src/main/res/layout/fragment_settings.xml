<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:fontFamily="@font/jost_bold"
                android:textSize="24sp"
                android:textColor="?attr/colorOnSurface"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:cardCornerRadius="35dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/profileImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mrbean"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:fontFamily="@font/jost_bold"
                        android:textSize="20sp"
                        android:textColor="?attr/colorOnSurface"/>
                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name"
                        android:fontFamily="@font/jost_regular"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:alpha="0.7"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOnSurface"
                android:alpha="0.1"/>

            <!-- Settings Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Subtitle Style -->
                <TextView
                    android:id="@+id/addIndexButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/subtitle_style"
                    android:padding="20dp"
                    android:fontFamily="@font/jost_medium"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:drawableStart="@drawable/ic_cc"
                    android:drawablePadding="16dp"
                    app:drawableTint="?attr/colorOnSurface"
                    android:background="?attr/selectableItemBackground"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOnSurface"
                    android:alpha="0.1"
                    android:layout_marginStart="56dp"/>

                <!-- Use External Player -->
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/externalPlayerToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use External Player"
                    android:padding="20dp"
                    android:fontFamily="@font/jost_medium"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:thumb="@drawable/switch_ios_selector"
                    app:track="@drawable/switch_ios_track"
                    app:trackTint="@color/switch_bg_color"
                    android:background="?attr/selectableItemBackground"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOnSurface"
                    android:alpha="0.1"
                    android:layout_marginStart="16dp"/>

                <!-- Backup -->
                <TextView
                    android:id="@+id/importExportDatabase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/backup"
                    android:padding="20dp"
                    android:fontFamily="@font/jost_medium"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:drawableStart="@drawable/ic_import_export"
                    android:drawablePadding="16dp"
                    app:drawableTint="?attr/colorOnSurface"
                    android:background="?attr/selectableItemBackground"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOnSurface"
                    android:alpha="0.1"
                    android:layout_marginStart="56dp"/>

                <!-- Check for Updates -->
                <TextView
                    android:id="@+id/checkforUpdates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check for Update"
                    android:padding="20dp"
                    android:fontFamily="@font/jost_medium"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:drawableStart="@drawable/ic_update"
                    android:drawablePadding="16dp"
                    app:drawableTint="?attr/colorOnSurface"
                    android:background="?attr/selectableItemBackground"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOnSurface"
                    android:alpha="0.1"
                    android:layout_marginStart="56dp"/>

                <!-- Join Telegram -->
                <TextView
                    android:id="@+id/telegroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Join Telegram"
                    android:padding="20dp"
                    android:fontFamily="@font/jost_medium"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="38dp"
                    android:drawablePadding="16dp"
                    app:drawableTint="?attr/colorOnSurface"
                    android:background="?attr/selectableItemBackground"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOnSurface"
                    android:alpha="0.1"
                    android:layout_marginStart="56dp"/>

                <!-- Trakteer -->
                <TextView
                    android:id="@+id/trakteer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trakteer"
                    android:padding="20dp"
                    android:fontFamily="@font/jost_medium"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:drawableStart="@drawable/ic_coffee"
                    android:drawablePadding="16dp"
                    app:drawableTint="?attr/colorOnSurface"
                    android:background="?attr/selectableItemBackground"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
