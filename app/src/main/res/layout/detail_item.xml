<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.ads.nativetemplates.TemplateView
                android:id="@+id/iklan_kecil"
                app:gnt_template_type="@layout/iklan_kecil_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginStart="15dp"
                android:background="@drawable/button_selector"
                android:id="@+id/framedeskripsi"
                android:padding="5dp">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/deskJudul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:textColor="#CCCCCC"
                    android:textSize="18sp"
                    android:text="Nama Movie"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_below="@id/deskJudul"
                    android:id="@+id/ratingsIkon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_regular"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp"
                    android:focusable="false"
                    android:clickable="false"
                    android:textAllCaps="false"
                    android:visibility="visible"
                    app:icon="@drawable/star"
                    app:iconTint="@color/yellow"
                    app:backgroundTint="@color/transparent"
                    android:layout_alignParentStart="true"
                    tools:text="8.6" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/selengkapnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_medium"
                    android:textColor="#CCCCCC"
                    android:textSize="15sp"
                    android:text="... Selengkapnya"
                    android:visibility="visible"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/deskJudul"
                    android:layout_toRightOf="@id/ratingsIkon"
                    android:padding="14dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/framejudul"
                    android:padding="15dp"
                    android:orientation="horizontal"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/subscibe">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:id="@+id/gambarPoster"
                        android:src="@drawable/mrbean"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginStart="15dp"
                        android:id="@+id/judulNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_medium"
                        android:textColor="#CCCCCC"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:paddingHorizontal="8dp"
                        android:text="Nama Movie"
                        android:visibility="visible"
                        android:maxLines="2"
                        android:ellipsize="end"
                        />
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subscibe"
                    app:cornerRadius="12dp"
                    android:layout_centerVertical="true"
                    app:iconTint="@color/black"
                    app:backgroundTint="@color/white"
                    android:text="Subcribe"
                    android:textAllCaps="false"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <com.google.android.material.button.MaterialButton
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/donasi"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_donasi"
                        app:iconTint="@color/black"
                        app:backgroundTint="@color/white"
                        android:text="Terima Kasih"
                        android:textAllCaps="false"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/watchlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="Add Watchlist"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_add"
                        app:iconTint="@color/black" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/download"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_download"
                        app:iconTint="@color/black"
                        app:backgroundTint="@color/white"
                        android:text="Download"
                        android:textAllCaps="false"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_marginHorizontal="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/share"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_send"
                        app:iconTint="@color/black"
                        app:backgroundTint="@color/white"
                        android:text="Share"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </HorizontalScrollView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/moreItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:background="@drawable/button_selector"
                android:nextFocusUp="@id/my_template"
                android:layout_marginTop="14dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="80dp"
                android:scrollbars="vertical"
                android:visibility="gone"
                tools:itemCount="5"
                tools:listitem="@layout/more_item" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.cardview.widget.CardView>