<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Spinner untuk Ukuran Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ukuran Subtitle"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerSubtitleSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/subtitle_sizes" />

    <!-- Spinner untuk Audio Track -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Track"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerAudioTrack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
