<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvEpisodeCard2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:nextFocusLeft="@id/playInEpisodeItem2"
    app:cardCornerRadius="15dp"
    android:focusable="true"
    android:clickable="true"
    app:cardBackgroundColor="@color/episode_item_bg_color">

    <eightbitlab.com.blurview.BlurView

        android:id="@+id/blurView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:clipChildren="false"
        android:elevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <ImageView
                android:id="@+id/episodeStill2"
                android:layout_width="133dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                app:srcCompat="@color/black85" />

            <RelativeLayout
                android:layout_width="133dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/markWatchedEpisode2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue80"
                    android:text="Watched"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:visibility="gone"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/playInEpisodeItem2"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:nextFocusDown="@id/tvEpisodeCard2"
                    android:orientation="horizontal"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="textStart"
                    app:iconSize="45sp"
                    app:iconTint="@color/download_button_bg_color" />
                <View
                    android:id="@+id/progress_overlay4"
                    android:layout_width="0dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_height="10dp"
                    android:background="@color/blue"
                    android:visibility="visible" />
            </RelativeLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/episodeStill2"
                android:orientation="vertical"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp">
                <TableRow
                    android:id="@+id/sXXeYY3"
                    android:layout_weight="1"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/judulSeries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_regular"
                        android:text="Winter Has Come"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </TableRow>>

                <TableRow
                    android:id="@+id/sXXeYY2"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/seasonNumberInItem2"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_medium"
                        android:text="S01"
                        android:layout_weight="0.3"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/episodeNumberInItem2"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_medium"
                        android:gravity="center_horizontal"
                        android:text="E01"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        android:layout_weight="0.3"
                        android:visibility="visible"
                        app:layout_constraintBottom_toTopOf="@id/ratingsTV"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/noOfSeasons2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/RuntimeInItem2"
                        style="@style/sizelabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/jost_medium"
                        android:text="48min"
                        android:layout_weight="0.3"
                        android:textAlignment="viewEnd"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        android:visibility="visible" />
                </TableRow>

                <TextView
                    android:id="@+id/episodeNameInItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_regular"
                    android:text="Winter Has Come"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/overviewDescInItem2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/jost_regular"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="Basically the whole plot of movie Basically the whole plot of movie Basically the whole plot of movie" />

            </TableLayout>



        </RelativeLayout>

    </eightbitlab.com.blurview.BlurView>


</androidx.cardview.widget.CardView>
