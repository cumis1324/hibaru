<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Layer (Dark & Blurred appearance) -->
    <item android:left="4dp" android:top="8dp" android:right="4dp" android:bottom="-4dp">
        <shape android:shape="rectangle">
            <solid android:color="#99000000" />
            <corners android:radius="14dp" />
        </shape>
    </item>
    
    <!-- Outer Glow (Wide & Faded) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <stroke
                android:width="6dp"
                android:color="#CCFFFFFF" /> <!-- Increased contrast -->
            <corners android:radius="14dp" />
        </shape>
    </item>
    <!-- Inner Sharp Border -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
