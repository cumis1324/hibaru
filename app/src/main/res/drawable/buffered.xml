<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of SeekBar -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/black" /> <!-- Warna abu-abu untuk background -->
        </shape>
    </item>

    <!-- Buffered area -->
    <item android:id="@android:id/secondaryProgress">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="#D3D3D3" /> <!-- Warna oranye untuk buffered -->
        </shape>
    </item>

    <!-- Progress area -->
    <item android:id="@android:id/progress">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/blue" /> <!-- Warna merah untuk progress -->
        </shape>
    </item>
</layer-list>
