<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer Glow (Soft Blue) -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#2040C4FF" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            
            <!-- Mid Glow (Sharper Blue) -->
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="#8040C4FF" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            
            <!-- Inner Solid (Semi-transparent white) -->
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#20FFFFFF" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default State (Transparent) -->
    <item android:drawable="@android:color/transparent" />
</selector>
