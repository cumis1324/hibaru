<resources>

    <style name="Widget.Theme.MyApplication.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/gnt_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="SpinnerTextStyle">
        <item name="android:textColor">@color/black</item> <!-- Warna teks -->
        <item name="android:padding">8dp</item> <!-- Opsional: Padding -->
        <item name="android:textSize">16sp</item> <!-- Ukuran teks -->
    </style>

    <!-- Gaya untuk teks Spinner di dropdown -->
    <style name="SpinnerDropdownStyle">
        <item name="android:textColor">@color/black</item> <!-- Warna teks dropdown -->
        <item name="android:padding">8dp</item> <!-- Opsional: Padding -->
        <item name="android:textSize">16sp</item> <!-- Ukuran teks -->
    </style>


</resources>